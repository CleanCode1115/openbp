<object-descriptor
	name="Association"
	object-class="org.openbp.cockpit.plugins.association.AssociationBean"
	>
	<description>An association having a name, an associated program path and file extensions</description>

	<property name="MimeTypes" display-name="Mime Types">
		<description>List of the mime types which are associated with a program.</description>
		<collection
			type-class="org.openbp.cockpit.plugins.association.MimeTypeAssociation"
			add-enabled="true"
			delete-enabled="true"
			reorder-enabled="true"/>
	</property>

</object-descriptor>
