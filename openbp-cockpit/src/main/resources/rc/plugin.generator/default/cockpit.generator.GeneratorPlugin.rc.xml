<resource>
	<item name="title">Basic Wizards</item>
	<item name="description">Plugin for basic wizards</item>
	<item name="icon" type="image/multi">
		<path>../../images/plugins/wizard.png</path>
	</item>

	<import container="cockpit" resource="standardoptions" />

	<group name="generator.action">
		<!-- Generate context menu -->
		<item name="displayname">_Wizards...</item>
		<item name="description">Select an execute a wizard</item>
		<item name="prio">500</item>
		<item name="icon" type="image/multi">
			<path>../../images/plugins/wizard.png</path>
		</item>
	</group>

	<!-- Wizard pages -->
	<import container="cockpit" resource="cockpit.generator.wizard.GeneratorWizard"/>
</resource>
