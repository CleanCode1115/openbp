<resource>
	<item name="title">Page Container</item>
	<item name="description">Container for a Jaspira page</item>
	<item name="icon" type="image/multi">
		<path>../images/plugin.png</path>
	</item>

	<group name="frame.openinframe">
		<item name="displayname">_Open View</item>
		<item name="description">Open the view in a new frame</item>
		<item name="icon" type="image/multi">
			<path>../images/plugin.png</path>
		</item>
	</group>

	<group name="frame.closeview">
		<item name="displayname">_Close View</item>
		<item name="description">Close the current view</item>
		<item name="icon" type="image/multi">
			<path>../images/pluginclose.png</path>
		</item>
	</group>

	<group name="frame.plugininframe">
		<item name="displayname">Open _Window in New Frame</item>
		<item name="description">Drag a window here to open it in a new frame</item>
		<item name="icon" type="image/multi">
			<path>../images/pluginwindow.png</path>
		</item>
	</group>

	<!-- Messages -->
	<item name="frame.empty">This frame is empty. You can open a view using the "Views|Open view" menu.</item>
</resource>
