<resource>
	<item name="title">Standard Actions</item>
	<item name="description">Actions</item>
	<item name="icon" type="image/multi">
		<path>../../jaspira/images/plugin.png</path>
	</item>

	<group name="standard">
		<item name="edit">Edit</item>
		<item name="file">File</item>
	</group>

	<!-- Actions -->

	<!-- standard.edit -->
	<group name="standard.edit.copy">
		<item name="displayname">_Copy</item>
		<item name="description">Copy the selected object(s) to the clipboard</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/copy.png</path>
		</item>
	</group>

	<group name="standard.edit.cut">
		<item name="displayname">C_ut</item>
		<item name="description">Copy and delete the selected object(s) to clipboard</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/cut.png</path>
		</item>
	</group>

	<group name="standard.edit.paste">
		<item name="displayname">_Paste</item>
		<item name="description">Paste object(s) from the clipboard</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/paste.png</path>
		</item>
	</group>

	<group name="standard.edit.delete">
		<item name="displayname">_Delete</item>
		<item name="description">Delete the selected object(s)</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/delete.png</path>
		</item>
	</group>

	<group name="standard.edit.reset">
		<item name="displayname">Reset</item>
		<item name="description">Reset the changes to an object</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/reset.png</path>
		</item>
	</group>

	<group name="standard.edit.undo">
		<item name="displayname">_Undo</item>
		<item name="description">Undo the last change</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/undo.png</path>
		</item>
	</group>

	<group name="standard.edit.redo">
		<item name="displayname">_Redo</item>
		<item name="description">Redo the last undone change</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/redo.png</path>
		</item>
	</group>

	<!-- standard.edit -->
	<group name="standard.file.open">
		<item name="displayname">_Open</item>
		<item name="description">Open an object</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/file/open.png</path>
		</item>
	</group>

	<group name="standard.file.newfile">
		<item name="displayname">_New</item>
		<item name="description">Create a new object</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/file/new.png</path>
		</item>
	</group>

	<group name="standard.file.save">
		<item name="displayname">_Save</item>
		<item name="description">Save the changes to an object</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/file/save.png</path>
		</item>
	</group>

</resource>
