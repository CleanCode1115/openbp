<resource>
	<item name="title">Finder</item>
	<item name="description">Search for references to a component</item>
	<item name="icon" type="image/multi">
		<path>../images/finder.png</path>
	</item>

	<item name="icon.finder.result" type="image/png">
		<path>../../images/workspace/processnode16.png</path>
	</item>

	<item name="tree.column">References</item>
	<item name="search.hits">{0} hits for $1</item>

	<!-- Action -->
	<group name="plugin.finderresult.refresh">
		<item name="displayname">_Repeat search</item>
		<item name="description">Repeat the search</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/reset.png</path>
		</item>
		<item name="prio" type="primitive/integer">40</item>
	</group>

	<group name="plugin.finderresult.delete">
		<item name="displayname">_Clear</item>
		<item name="description">Clear the reference list</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/delete.png</path>
		</item>		
		<item name="prio" type="primitive/integer">60</item>
	</group>
</resource>
