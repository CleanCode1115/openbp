<resource>
	<import resource="cockpit.plugins.toolbox.ToolBoxPlugin" />

	<item name="title">Toolbox</item>
	<item name="description">User-configurable toolbox containing arbitrary components</item>
	<item name="icon" type="image/multi">
		<path>../../images/plugins/toolbox.png</path>
	</item>
	<item name="sequence">C-w t,C-w C-t</item>

	<!-- Actions -->
	<group name="toolbox.add">
		<item name="displayname">Add To _Toolbox</item>
		<item name="description">Add an item to toolbox</item>
		<item name="prio">1000</item>
		<item name="icon" type="image/multi">
			<path>../../images/plugins/toolbox.png</path>
		</item>
	</group>

	<group name="toolbox.remove">
		<item name="displayname">Remove From T_oolbox</item>
		<item name="description">Remove an item from the toolbox</item>
		<item name="prio">101</item>
		<item name="icon" type="image/multi">
			<path>../../images/plugins/toolbox.png</path>
		</item>
	</group>
</resource>
