<resource>
	<item name="title">Option Manager</item>
	<item name="description">Manages application options</item>
	<item name="icon" type="image/multi">
		<path>../../images/toolbar/file/option.png</path>
	</item>

	<import container="cockpit" resource="standardmenus" />

	<group name="optionmanager.openoptiondialog">
		<item name="menuparent">menu.cockpit.option</item>
		<item name="toolbarparent">toolbar.options</item>
		<item name="displayname">_Options...</item>
		<item name="description">Open the option dialog</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/file/option.png</path>
		</item>
		<item name="sequence">C-F2,C-w o,C-w C-o</item>
	</group>

	<item name="optiondialogtitle">Option Dialog</item>
</resource>
