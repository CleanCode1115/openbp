<resource>

	<item name="title">Clipboard</item>
	<item name="description">Clipboard Controller</item>
	<item name="icon" type="image/multi">
		<path>../../images/toolbar/edit/cut.png</path>
	</item>

	<import container="cockpit" resource="standardmenus"/>

	<!-- Actions -->
	<group name="global.clipboard.cut">
		<item name="menuparent">menu.edit.clipboard</item>
		<item name="toolbarparent">toolbar.clipboard</item>
		<item name="displayname">C_ut</item>
		<item name="description">Cut the selection to the clipboard</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/cut.png</path>
		</item>
		<item name="prio">10</item>
		<item name="sequence">C-x</item>
	</group>

	<group name="global.clipboard.copy">
		<item name="menuparent">menu.edit.clipboard</item>
		<item name="toolbarparent">toolbar.clipboard</item>
		<item name="displayname">_Copy</item>
		<item name="description">Copy the selection to the clipboard</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/copy.png</path>
		</item>
		<item name="sequence">C-c</item>
		<item name="prio">20</item>
	</group>

	<group name="global.clipboard.paste">
		<item name="menuparent">menu.edit.clipboard</item>
		<item name="toolbarparent">toolbar.clipboard</item>
		<item name="displayname">_Paste</item>
		<item name="description">Paste the current clipboard entry</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/paste.png</path>
		</item>
		<item name="sequence">C-v</item>
		<item name="prio">30</item>
	</group>

	<group name="global.clipboard.delete">
		<item name="menuparent">menu.edit.clipboard</item>
		<item name="toolbarparent">toolbar.clipboard</item>
		<item name="displayname">_Delete</item>
		<item name="description">Delete the selection</item>
		<item name="icon" type="image/multi">
			<path>../../images/toolbar/edit/delete.png</path>
		</item>
		<item name="prio">40</item>
		<item name="sequence">DELETE</item>
	</group>

</resource>
