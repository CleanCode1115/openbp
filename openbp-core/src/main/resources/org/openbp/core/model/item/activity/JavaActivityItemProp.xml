<object-descriptor
	name="JavaActivityItem"
	display-name="Java Activity"
	object-class="org.openbp.core.model.item.activity.JavaActivityItem"
	validator="org.openbp.guiclient.objectvalidators.JavaActivityItemValidator"
	>
	<description>An activity is a building block of an OpenBP process.
Activities can be used to invoke Java methods or web services or display user interface templates.
A Java activity encapsulates a Java activity implementation class.</description>

	<property name="Name" read-only="true"/>

	<property name="DisplayName"/>
	<property name="Description"/>

	<property name="OwningModelQualifier" read-only="true"/>
	<property name="FunctionalGroup"/>

	<property name="HandlerDefinition" display-name="Handler"
		complex-property-type="org.openbp.core.handler.HandlerDefinition"
		expanded="true">
		<description>Activity handler definition</description>
	</property>

	<property name="ImagePath"/>
	<property name="ImageOnly"/>
	<property name="ImageResize"/>

	<property name="TaggedValueList"/>

	<!-- <property name="ReadOnly"/> -->
	<property name="CreatedBy"/>
	<property name="MaintainedBy"/>

</object-descriptor>
