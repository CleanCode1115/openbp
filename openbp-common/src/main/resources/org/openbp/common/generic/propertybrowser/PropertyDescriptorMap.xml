<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Object Mapping DTD Version 1.0//EN"
                         "http://castor.exolab.org/mapping.dtd">

<mapping>

	<class name="org.openbp.common.generic.propertybrowser.PropertyDescriptor"
		extends="org.openbp.common.generic.description.DisplayObjectImpl">

		<map-to xml="property"/>

		<field name="Group"
			type="string"
			get-method="getGroup"
			set-method="setGroup">
			<bind-xml name="group" node="attribute"/>
		</field>

		<field name="Required"
			type="boolean"
			get-method="isRequired"
			set-method="setRequired">
			<bind-xml name="required" node="attribute"/>
		</field>

		<field name="ReadOnly"
			type="boolean"
			get-method="isReadOnly"
			set-method="setReadOnly">
			<bind-xml name="read-only" node="attribute"/>
		</field>

		<field name="Expanded"
			type="boolean"
			get-method="isExpanded"
			set-method="setExpanded">
			<bind-xml name="expanded" node="attribute"/>
		</field>

		<field name="ValidatorClassName"
			type="string"
			get-method="getValidatorClassName"
			set-method="setValidatorClassName">
			<bind-xml name="validator" node="attribute"/>
		</field>

		<field name="EditorClassName"
			type="string"
			get-method="getEditorClassName"
			set-method="setEditorClassName">
			<bind-xml name="editor" node="attribute"/>
		</field>

		<field name="EditorParamString"
			type="string"
			get-method="getEditorParamString"
			set-method="setEditorParamString">
			<bind-xml name="editor-param" node="element"/>
		</field>

		<field name="ComplexPropertyType"
			type="string"
			get-method="getComplexPropertyType"
			set-method="setComplexPropertyType">
			<bind-xml name="complex-property-type" node="attribute"/>
		</field>

		<field name="CollectionDescriptor"
			type="org.openbp.common.generic.propertybrowser.CollectionDescriptor"
			get-method="getCollectionDescriptor"
			set-method="setCollectionDescriptor">
			<bind-xml name="collection" node="element"/>
		</field>

	</class>

</mapping>
